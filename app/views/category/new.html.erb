  <div class="container-fluid category_nav p-3 justify-content-between d-flex">
   
  
    <%= link_to 'back',root_path,class:"btn btn-light" %>
  

      <h2> Add Categories </h2>

</div>

<div class="d-flex flex-column align-items-center">
 
  <%= form_with model: @category, url: category_index_path, method: :post do |form| %>
     <div>
        <%= form.label :name, class: "form-label" %><br>
        <%= form.text_field :name,  class:"form-control" %>
     </div> 
    <div>
      <%= form.label :icon, class:"form-label" %><br>
      <%= form.file_field :icon,class:"form-control" %>
    </div> 
    <div class="actions login text-center py-1 my-2">
    <%= form.submit "Add Category",class:"btn text-light " %>
  </div>
       
   
  <% end %>
</div>

