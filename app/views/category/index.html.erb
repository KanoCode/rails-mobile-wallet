<%= render 'layouts/navbar'%>


<h2 class="text-center">Categories </h2>
<ul>
<% @categories.each do |category| %>

<%= link_to category_path(category.id) do %>
    
<li class="my-4  col-3 d-flex justify-content-between">
    <%= image_tag(category.icon, style:" width : 120px; height : 120px; text-decoration: none;") %>
    <div class="d-flex justify-content-between m-auto">
   <p class="mx-3 p-3 "><%=category.name%> <p> <h4 class="mx-2 py-3"> $<%=category.payments.sum(:amount) %></h4>
   </div>
    </li>


<%end%>

    <%end%>
</ul>
<button class="add-category p-3">
<%= link_to "Add a new category",new_category_path, class:"p-2"%>
</button>