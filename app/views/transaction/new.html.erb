
<div class="container-fluid w-50 d-flex flex-column align-items-center">
  <h1 class="mb-5">Add Transaction</h1>
  <%= form_with model: @payment, url: transaction_index_path, method: :post do |form| %>
     <div>
        <%= form.label :name, class: "form-label" %><br>
        <%= form.text_field :name,  class:"form-control" %>
     </div>

      <%= form.select :category_id, Category.order(:name).where(user_id:1).pluck(:name, :id), {}, {:multiple => true, required:true, class: "form-select mb-3"} %>
  <div>
    <%= form.label :amount, class:"form-label" %><br>
    <%= form.number_field :amount, class:"form-control" %>
  </div>   
    <%= form.submit 'Add Transaction', class: "btn" %>
  <% end %>
</div>

